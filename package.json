{
  "name": "clean-architecture-express-boilerplate",
  "version": "1.0.3",
  "description": "A clean architecture Express boilerplate backend",
  "author": "DevJohanAdrian",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/DevJohanAdrian/clean-architecture-express-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevJohanAdrian/clean-architecture-express-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/DevJohanAdrian/clean-architecture-express-boilerplate/issues"
  },
  "keywords": [
    "typescript",
    "express",
    "boilerplate"
  ],
  "engines": {
    "node": ">=22.x",
    "npm": ">=10.x"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/**/*.{js,ts}",
    "prepare": "husky",
    "husky:disable": "ren .husky .husky.disabled",
    "husky:enable": "ren .husky.disabled .husky",
    "prisma-postinstall": "prisma generate",
    "prisma-migration": "prisma migrate dev",
    "prisma-seed": "prisma db seed",
    "prisma-push": "prisma db push",
    "prisma-pull": "prisma db pull",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "@prisma/client": "^5.21.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.21.1",
    "express-rate-limit": "^7.2.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "pino": "^9.4.0",
    "pino-http": "^10.0.0",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.15.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.3.3",
    "prisma": "^5.21.0",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "typescript-eslint": "^8.15.0",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "npm run lint:fix",
      "npm run format"
    ],
    "!test/**": []
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
